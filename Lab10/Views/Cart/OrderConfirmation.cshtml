🥰☕🍵 Thank you for your order! 🥰☕🍵


<div>
    <h3>Order Details</h3>
    <p>Order ID: @Model.Order.Id</p>
    <p>Payment Method: @Model.Order.PaymentMethod</p>

    <h4>Order Items:</h4>
    <table>
        <thead>
            <tr>
                <th>Article Name</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @{
                decimal totalPrice = 0;
            }

            @foreach (var item in Model.OrderItems)
            {
                var itemTotalPrice = item.Article.Price * item.OrderItem.Quantity;
                <!-- sum -->
                totalPrice += itemTotalPrice;


                    <tr>
                        <td>@item.Article.Name</td>
                        <td>@item.OrderItem.Quantity</td>
                        <td>@itemTotalPrice.ToString("C")</td>
                    </tr>
            }
        </tbody>
    </table>

    <h3>Total Price: @totalPrice.ToString("C")</h3>
</div>